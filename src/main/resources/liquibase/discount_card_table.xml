<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="3" author="Bobrovich">
        <createTable tableName="discount_card" schemaName="market">
            <column name="id"
                    type="integer"
                    defaultValue="nextval('market.discount_card_seq')">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="discount"
                    type="smallint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <sql>
            ALTER TABLE market.discount_card ADD CONSTRAINT discount_check CHECK (discount BETWEEN 0 AND 100)
        </sql>
    </changeSet>
</databaseChangeLog>